      },
      "rounded-window-corners": {
        "type": "ego",
        "uuid": "rounded-window-corners@yilozt",
        "numerical_id": "5237",
        "name": "Rounded Window Corners"
      },
      "dash-to-dock": {
        "type": "ego",
        "uuid": "dash-to-dock@micxgx.gmail.com",
