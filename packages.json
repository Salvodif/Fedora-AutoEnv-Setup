{
  "phase1_system_preparation": {
    "dnf_packages": [
      "dnf5",
      "dnf5-plugins",
      "flatpak"
    ]
  },
  "phase2_basic_configuration": {
    "dnf_packages": [
      "git",
      "curl",
      "cargo",
      "python3",
      "python3-pip",
      "stow",
      "dnf-plugins-core",
      "powerline-fonts",
      "bat",
      "fzf",
      "libreoffice-opensymbol-fonts",
      "mscore-fonts-all",
      "zsh"
    ],
    "dnf_swap_ffmpeg": {
      "from": "ffmpeg-free",
      "to": "ffmpeg"
    },
    "dnf_groups_sound_video": [
      "sound-and-video"
    ]
  },
  "phase3_terminal_enhancement": {
    "autin": "cargo install atuin",
    "eza": "cargo install eza",
    "fd-find": "cargo install fd-find",
    "zoxide": "curl -sSfL https://raw.githubusercontent.com/ajeetdsouza/zoxide/main/install.sh | sh",
    "omz": "curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh | bash",
    "zsh-autosuggestions": "git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-autosuggestions",
    "zsh-syntax-highlighting": "git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting",
    "you-should-use": "git clone https://github.com/MichaelAquilina/zsh-you-should-use.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/you-should-use",
    "zsh-eza": "git clone https://github.com/z-shell/zsh-eza.git ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/zsh-eza",
    "fzf-tab": "git clone https://github.com/Aloxaf/fzf-tab ${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}/plugins/fzf-tab"
  },
  "phase4_gnome_configuration": {
    "dnf_packages": [
      "gnome-tweaks",
      "gnome-shell-extension-common"
    ],
    "flatpak_apps": {
      "com.mattjakeman.ExtensionManager": "GNOME Extension Manager"
    },
    "gnome_extensions": {
      "quick-settings-tweaks": {
        "type": "git",
        "url": "https://github.com/qwreey/quick-settings-tweaks.git",
        "name": "Quick Settings Tweaks",
        "uuid_to_enable": "quick-settings-tweaks@qwreey",
        "build_command": "cd quick-settings-tweaks; chmod +x install.sh; sh ./install.sh"
      },
      "just-perfection": {
        "type": "git",
        "url": "https://gitlab.gnome.org/jrahmatzadeh/just-perfection.git",
        "name": "Just Perfection",
        "uuid_to_enable": "just-perfection-desktop@just-perfection",
        "build_command": "cd just-perfection; ./scripts/build.sh -i"
      },
      "rounded-window-corners": {
        "type": "git",
        "url": "https://github.com/yilozt/rounded-window-corners.git",
        "name": "Rounded Window Corners",
        "uuid_to_enable": "rounded-window-corners@yilozt",
        "build_command": "cd rounded-window-corners; yarn install && yarn ext:install"
      },
      "dash-to-dock": {
        "type": "git",
        "url": "https://github.com/micheleg/dash-to-dock.git",
        "name": "Dash to Dock",
        "uuid_to_enable": "dash-to-dock@micxgx.gmail.com",
        "build_command": "cd dash-to-dock; make -C dash-to-dock install"
      },
      "blur-my-shell": {
        "type": "git",
        "url": "https://github.com/aunetx/blur-my-shell.git",
        "name": "Blur my Shell",
        "uuid_to_enable": "blur-my-shell@aunetx",
        "build_command": "cd blur-my-shell; make install"
      },
      "bluetooth-quick-connect": {
        "type": "git",
        "url": "https://github.com/bjarosze/gnome-bluetooth-quick-connect.git",
        "name": "Bluetooth Quick Connect",
        "uuid_to_enable": "bluetooth-quick-connect@bjarosze.gmail.com",
        "build_command": "cd gnome-bluetooth-quick-connect; make install"
      },
      "clipboard-indicator": {
        "type": "git",
        "url": "https://github.com/Tudmotu/gnome-shell-extension-clipboard-indicator.git $HOME/.local/share/gnome-shell/extensions/clipboard-indicator@tudmotu.com",
        "name": "Clipboard Indicator",
        "uuid_to_enable": "clipboard-indicator@tudmotu.com",
        "build_command": ""
      },
      "wireless-hid": {
        "type": "git",
        "url": "https://github.com/vchlum/wireless-hid.git",
        "name": "Wireless HID",
        "uuid_to_enable": "wireless-hid@chlumskyvaclav.gmail.com",
        "build_command": "cd wireless-hid; make build; make install"
      },
      "logo-menu": {
        "type": "git",
        "url": "https://github.com/Aryan20/Logomenu.git",
        "name": "Logo Menu",
        "uuid_to_enable": "logomenu@aryan_k",
        "build_command": "cd Logomenu:; make install"
      }
    }
  },
  "phase5_nvidia_installation": {
    "dnf_packages_standard": [
      "akmod-nvidia",
      "xorg-x11-drv-nvidia-cuda"
    ],
    "dnf_package_tainted_repo": "rpmfusion-nonfree-release-tainted",
    "dnf_swap_open_drivers": {
      "from": "akmod-nvidia",
      "to": "akmod-nvidia-open"
    }
  },
  "phase6_additional_packages": {
    "dnf_packages": [
      "btop",
      "fastfetch",
      "steam",
      "timeshift",
      "unzip",
      "p7zip",
      "p7zip-plugins"
    ],
    "custom_repo_dnf_packages": {
      "visual_studio_code": {
        "name": "Visual Studio Code",
        "check_if_installed_pkg": "code",
        "repo_setup_commands": [
          "sudo rpm --import https://packages.microsoft.com/keys/microsoft.asc",
          "echo -e \"[code]\\nname=Visual Studio Code\\nbaseurl=https://packages.microsoft.com/yumrepos/vscode\\nenabled=1\\nautorefresh=1\\ntype=rpm-md\\ngpgcheck=1\\ngpgkey=https://packages.microsoft.com/keys/microsoft.asc\" | sudo tee /etc/yum.repos.d/vscode.repo > /dev/null"
        ],
        "dnf_package_to_install": "code"
      },
      "google_chrome": {
        "name": "Google Chrome",
        "check_if_installed_pkg": "google-chrome-stable",
        "repo_setup_commands": [
            "sudo dnf install -y fedora-workstation-repositories",
            "sudo dnf config-manager --set-enabled google-chrome"
        ],
        "dnf_package_to_install": "google-chrome-stable"
      }
    },
    "flatpak_apps": {
      "org.gimp.GIMP": "GIMP (Image Editor)",
      "com.spotify.Client": "Spotify (Music Streaming)",
      "com.discordapp.Discord": "Discord (Chat)",
      "com.obsproject.Studio": "OBS Studio (Screen Recording/Streaming)",
      "com.usebottles.bottles": "Bottles lets you run Windows software on Linux",
      "com.github.tchx84.Flatseal": "Flatseal is a graphical utility to review and modify permissions from your Flatpak applications"
    }
  }
}